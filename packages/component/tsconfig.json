{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es5",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "declaration": true,
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src", "demo"]
}
